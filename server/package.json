{
  "name": "server",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn transpile",
    "clean": "rimraf dist",
    "transpile": "babel ./src -d dist",
    "watch": "nodemon",
    "start": "yarn transpile && node ./dist/index.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": { 
    "exec": "yarn start",
    "watch": ["src/*"],
    "ignore": ["**/node_modules/**", "**/__tests__/**", "*test.js", "*.spec.js"]
  },
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "debug": "^4.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.5",
    "onoff": "^6.0.0",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "socket.io": "^2.3.0"
  }
}
